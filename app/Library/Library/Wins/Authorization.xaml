<Window x:Class="Library.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Authorization" WindowStartupLocation="CenterScreen"
 
        MinHeight="500" MinWidth="800" Height="500" Width="800"
        FontSize="25" FontWeight="DemiBold"
        Icon="pack://application:,,,/Images/YetiIcon.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="1.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="Grr… Zalogin's'a bratanch'ik" FontSize="30" FontWeight="ExtraBlack">
        </TextBlock>
        
        <TextBlock Grid.Column="0" Grid.Row="2"
                   VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 0 20"
                   Text="Login">
        </TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="3"
                   VerticalAlignment="Top"  HorizontalAlignment="Right" Margin="0 0 0 20"
                   Text="Password">
        </TextBlock>

        <TextBox Name="LoginBox"
                 Grid.Column="1" Grid.Row="2"
                 VerticalAlignment="Bottom" Margin="20 0 0 20" Height="35"
                 TextAlignment="Center">
        </TextBox>

        <PasswordBox Name="PasswordBox" 
                     Grid.Column="1" Grid.Row="3" 
                     VerticalAlignment="Top" Margin="20 0 0 0" Height="35">
        </PasswordBox>

        <Button Name="ButtonLogin" Content="Sign in" Click="ButtonLogin_Click"
                Grid.Column="1" Grid.Row="4" Margin="100 0 100 0" MaxWidth="150" Height="50">
        </Button>
    </Grid>
</Window>
